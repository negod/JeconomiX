<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
 
    <changeSet id="Create company Table" author="Joakim Backede">
        
        <createTable tableName="company">
            <column name="id" type="varchar(36)" >
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="updatedDate" type="timestamp" >
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(200)" >
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="bill_category" type="varchar(36)" >
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="expense_category" type="varchar(36)" >
                <constraints nullable="true" unique="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="bill_category"
                                 baseTableName="company"
                                 constraintName="bill_category_fk"                                 
                                 referencedColumnNames="id"
                                 referencedTableName="bill_category"
                                 onDelete="NO ACTION"
                                 onUpdate="RESTRICT"/>
        
        <addForeignKeyConstraint baseColumnNames="expense_category"
                                 baseTableName="company"
                                 constraintName="expense_category_fk"                                 
                                 referencedColumnNames="id"
                                 referencedTableName="expense_category"
                                 onDelete="NO ACTION"
                                 onUpdate="RESTRICT"/>

        <rollback>
            <dropTable tableName="company" cascadeConstraints="true" />
        </rollback>
        
    </changeSet>
    
</databaseChangeLog>
