<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
 
    <changeSet id="Create many to many budget_bill category_type" author="Joakim Backede">
        
        <createTable tableName="budget_budget_expense">
            <column name="id" type="varchar(36)" >
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="updatedDate" type="timestamp" >
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(200)" >
                <constraints nullable="false" />
            </column>
            <column name="budget_expense" type="varchar(36)" >
                <constraints nullable="true" />
            </column>
            <column name="budget" type="varchar(36)" >
                <constraints nullable="true" />
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="budget_expense"
                                 baseTableName="budget_budget_expense"
                                 constraintName="budget_budget_expense_fk"                                 
                                 referencedColumnNames="id"
                                 referencedTableName="budget_expense"
                                 onDelete="NO ACTION"
                                 onUpdate="RESTRICT"/>
        
        <addForeignKeyConstraint baseColumnNames="budget"
                                 baseTableName="budget_budget_expense"
                                 constraintName="budget_expense_fk"                                 
                                 referencedColumnNames="id"
                                 referencedTableName="budget"
                                 onDelete="NO ACTION"
                                 onUpdate="RESTRICT"/>

        <rollback>
            <dropTable tableName="budget_budget_bill" cascadeConstraints="true" />
        </rollback>
        
    </changeSet>
    
</databaseChangeLog>
